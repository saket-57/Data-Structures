package beginArrays;

public class Arrays{
	private int sizeArr;
	private int length;
	private int posArr;
	private int[] arr, copyArr;
		
	//default constructor
	public Arrays() {
		this.sizeArr=0;
		this.length=0;
		this.posArr=0;
		
	}
	
	//parameterized constructor
	public Arrays(int size) {
		this.sizeArr=size;
		this.length=0;
		this.posArr=0;
		this.arr = new int[sizeArr];
	}
	
	
	//method for insert
	
	public void insert(int val) {
		//int i=this.length;
		while(this.length < this.sizeArr) {
			arr[this.length]= val;
			++this.length;
		}
	}
}