package beginArrays;

public class Arrays{
	private int[] items;
	public Arrays(int length) {
		items = new int[length];
		
	}
	
	public void print() {
		for(int i=0;i<items.length;i++) {
			System.out.print(items[i]+" ");
		}
	}
	
